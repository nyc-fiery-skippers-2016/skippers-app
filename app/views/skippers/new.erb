<h1>Create a new Skipper</h1>

<%= erb :"/partials/_errors" %>


<form method="POST" action="/skippers">
  <input type="text" name="skipper[name]" placeholder="Name" value="<%= @skipper.name %>">
  <input type="text" name="skipper[email]" placeholder="Email" value="<%= @skipper.email %>">
  <input type="password" name="skipper[password]" placeholder="Password">
  <input type="text" name="skipper[wingspan]" placeholder="Wingspan" value="<%= @skipper.wingspan %>">
  <input type="submit" value="Create this Skipper!">
</form>
